generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
  MODERATOR
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  username  String
  role      UserRole @default(USER) // role can also be set in clerk directly
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

